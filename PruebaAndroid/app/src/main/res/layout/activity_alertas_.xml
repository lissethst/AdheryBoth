<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".Alertas_Activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_titulo_alertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Alertas"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="330dp"
                android:layout_height="240dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Metformina"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_fecha_inicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Fecha de inicio:"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/id_horarios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Horarios:"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/id_frecuencia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="21dp"
                                android:text="Frecuencia:"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/id_dosis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="23dp"
                                android:text="Dosis:"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/id_dias_restantes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:text="DÃ­as restantes:"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="203dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editText_fecha_inicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ems="10"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:text="15/06/2019"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editText_horarios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ems="10"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:text="7:00 - 15:00 - 23:00"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editText_frecuencia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ems="10"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:text="Diaria"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editText_dosis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:enabled="false"
                                android:inputType="textPersonName"
                                android:text="1 cada 8 horas"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editText_dias_restantes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="10"
                                android:textSize="14sp"
                                android:enabled="false"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_newAlert"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="#45b162"
                android:text="Nueva Alerta"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>